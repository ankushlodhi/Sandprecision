<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="Swissup_Recaptcha/js/recaptcha" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Recaptcha/js/breeze/recaptcha</item>
                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">swissup_recaptcha/general/enable_frontend</param>
                                </item>
                                <item name="import" xsi:type="array">
                                    <item name="widget" xsi:type="string">Swissup_Recaptcha/js/recaptcha</item>
                                    <item name="api-loader" xsi:type="string">Swissup_Recaptcha/js/breeze/api-loader</item>
                                </item>
                            </item>
                            <item name="Swissup_Recaptcha/js/newsletter" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Recaptcha/js/breeze/newsletter</item>
                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">swissup_recaptcha/general/enable_frontend</param>
                                </item>
                                <item name="import" xsi:type="array">
                                    <item name="recaptcha-newsletter" xsi:type="string">Swissup_Recaptcha/js/newsletter</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
